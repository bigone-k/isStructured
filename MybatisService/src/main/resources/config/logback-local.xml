<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOG_DIR" value="D:/@Git/testcode/logs" />
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- By default, encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
        <encoder>
            <pattern>%d{yyyyMMdd HH:mm:ss.SSS} [%thread] %-3level %logger{5} - %msg %n</pattern>
        </encoder>
    </appender>

    <appender name="LOG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_DIR}/API%d{yyyyMMdd}.log</FileNamePattern>
            <maxHistory>90</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>[%d{HH:mm:ss.SSS}] %-4relative [%thread] %-5level %logger{35} - %m%n</pattern>
        </encoder>
    </appender>

    <logger name="jdbc" level="OFF"/>

    <logger name="jdbc.sqlonly" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="LOG_FILE" />
    </logger>

    <logger name="jdbc.sqltiming" level="WARN" additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="LOG_FILE" />
    </logger>

    <logger name="jdbc.audit" level="OFF" additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="LOG_FILE" />
    </logger>

    <logger name="jdbc.resultset" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="LOG_FILE" />
    </logger>

    <logger name="jdbc.resultsettable" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="LOG_FILE" />
    </logger>

    <logger name="jdbc.connection" level="OFF" additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="LOG_FILE" />
    </logger>

    <logger name="org.thymeleaf" level="WARN" additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="LOG_FILE" />
    </logger>

    <logger name="reactor.ipc.netty.http.client.HttpClient" level="WARN" additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="LOG_FILE" />
    </logger>

    <!-- Custom -->
    <logger name="AOP" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="LOG_FILE" />
    </logger>


    <!-- Root -->
    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="LOG_FILE" />
    </root>
</configuration>